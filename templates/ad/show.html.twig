{% extends 'base.html.twig' %}

{% block title %}Ad{% endblock %}

{% block body %}
    <h1>Ad</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ad.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ ad.title }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ ad.price }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ ad.age }}</td>
            </tr>
            <tr>
                <th>Mileage</th>
                <td>{{ ad.mileage }}</td>
            </tr>
            <tr>
                <th>AdPostingDate</th>
                <td>{{ ad.adPostingDate ? ad.adPostingDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>GeneralDescription</th>
                <td>{{ ad.generalDescription }}</td>
            </tr>
            <tr>
                <th>Feature</th>
                <td>{{ ad.feature }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('ad_index') }}">back to list</a>

    <a href="{{ path('ad_edit', {'id': ad.id}) }}">edit</a>

